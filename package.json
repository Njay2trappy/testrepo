{
  "name": "solana-payment-bot",
  "version": "1.0.0",
  "description": "A Telegram bot for processing Solana payments",
  "main": "app.js",
  "scripts": {
    "start": "node app.js",                          // Run app.js by default
    "bot": "node bot.js",                            // Run the bot program
    "dev": "npm-run-all --parallel start bot"        // Run both app.js and bot.js in parallel
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  },
"dependencies": {
    "@solana/web3.js": "^1.68.0",
    "axios": "^1.4.0",
    "telegraf": "^4.11.0",
    "punycode": "^2.3.0",
    "dotenv": "^16.0.3",
    "node-fetch": "^3.2.0",                         // Fetch library for API requests
    "fs": "^0.0.1" 
},
  "engines": {
    "node": ">=16.0.0"
  },
